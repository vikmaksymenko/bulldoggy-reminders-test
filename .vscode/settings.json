{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "editor.formatOnSave": true,
    "cucumberautocomplete.steps": ["cypress/support/step_definitions/**/*.ts"],
    "cucumberautocomplete.syncfeatures": true,
    "cucumberautocomplete.strictGherkinCompletion": false,
    "cucumberautocomplete.onTypeFormat": true,
    "eslint.lintTask.enable": true,
    "cypressHelper.commandForOpen": "npx cypress open",
    "cypressHelper.customCommandsFolder": "cypress/support",
    "cypressHelper.cucumberTagsAutocomplete": {
        "enable": true,
        "allurePlugin": true,
        "tags": ["logged_in"]
    },
    "[typescript]": {
        "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
    }
}
